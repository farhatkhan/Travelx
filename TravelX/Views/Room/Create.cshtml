@using System.Web.UI.WebControls

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">
            Manage Rooms <small>Add Room</small>
        </h1>
    </div>
</div>
<!-- /. ROW  -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Agent/Hotel Room For Booking
            </div>
            <div class="panel-body">

                <form role="form" method="post">

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Hotel</label>
                                <input type="number" class="form-control" id="firstname" name="firstname" value="" required="">
                            </div>
                            <div class="form-group">
                                <label for="sel1">Room Type:</label>
                                <select class="form-control" id="sel1">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="sel1">Agent:</label>
                                <select class="form-control" id="sel1">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Number of Rooms</label>
                                <input type="number" class="form-control" id="firstname" name="firstname" value="" required="">
                            </div>
                            <div class="form-group">
                                <label>Price</label>
                                <input type="number" class="form-control" id="firstname" name="firstname" value="" required="">
                            </div>
                            <div class="form-group">
                                <label for="sel1">Price Unit:</label>
                                <select class="form-control" id="sel1">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Customer Price</label>
                                <input type="number" class="form-control" id="firstname" name="firstname" value="" required="">
                            </div>
                            <div class="form-group">
                                <label>Weekend Price</label>
                                <input type="number" class="form-control" id="firstname" name="firstname" value="" required="">
                            </div>
                            <div class="form-group">
                                <label>Weekend Customer Price</label>
                                <input type="number" class="form-control" id="firstname" name="firstname" value="" required="">
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Effective From</label>
                                <input class="datepicker" type="text" class="form-control" id="effective_from" name="lastname" value="" required="">
                            </div>
                            <div class="form-group">
                                <label>Effective To</label>
                                <input class="datepicker" type="text" class="form-control" id="effective_to" name="lastname" value="" required="">
                            </div>
                            <div class="form-group">
                                <label for="sel1">Is Weekend Price</label>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="" checked></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="sel1">Verified</label>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="" checked></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="sel1">Active</label>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="" checked></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 pull-right text-right">
                            <button type="submit" class="btn btn-default">Save</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

    <!-- /. WRAPPER  -->
